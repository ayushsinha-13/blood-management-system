<%- include("partials/Admin"); -%>

<!-- Code Goes Here -->
    <div class="container table">
        <table class="table table-dark table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Phone no.</th>
                    <th scope="col">H-Code</th>
                    <th scope="col">Status</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <%var count = 1;%>
                <%for(var i = Recipient.length - 1; i >= 0 ; i--){%>
                <tr>
                    <th scope="row"><%=count%></th>
                    <td><%=Recipient[i].name%></td>
                    <td><%=Recipient[i].phone%></td>
                    <td><%=Recipient[i].hospital_ID%></td>
                    <% if(Recipient[i].status === true){ %>
                        <td>Approved</td>
                    <% }else{ %>
                        <td>Pending</td>
                    <% } %>
                    <td>
                        <form action="/admin-appointment" method="post">
                            <input type="text" name="rID" id="rID" style="display: none;" value="<%=Recipient[i].r_id%>">
                            <button type="submit"><i class="fa-solid fa-check"></i></button>
                        </form>
                    </td>
                </tr>
                <% count = count + 1}%>
            </tbody>
        </table>
    </div>
</div>
</body>
</html>
